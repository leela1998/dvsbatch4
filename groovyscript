pipeline{
agent any
parameters {
  choice choices: ['dev', 'prod'], description: 'select env', name: 'ENV'
}
environment {
  JAVA_HOME = "/opt/java/bin"
}

stages{
stage('working with variables') {
steps{
script{
val1=20
println "myval1 is ${val1}"
println "myparameters value is ${params.ENV}"
println "my env value is ${env.JAVA_HOME}"
}
}
}
}
}
